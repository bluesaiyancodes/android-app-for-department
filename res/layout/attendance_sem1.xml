<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/sub1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="64dp"
        app:srcCompat="@drawable/choosingcircle" />

    <ImageView
        android:id="@+id/sub2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/sub1"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="34dp"
        app:srcCompat="@drawable/choosingcircle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sub1"
        android:layout_alignBottom="@+id/sub1"
        android:layout_alignRight="@+id/sub1"
        android:layout_alignLeft="@+id/sub1"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:id="@+id/att_sub1"
        android:text="@string/sub1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sub2"
        android:layout_alignBottom="@+id/sub2"
        android:layout_alignRight="@+id/sub2"
        android:layout_alignLeft="@+id/sub2"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:id="@+id/att_sub2"
        android:textSize="50dp"
        android:text="@string/sub2" />

</RelativeLayout>