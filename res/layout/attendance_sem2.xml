<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/sub3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="29dp"
        app:srcCompat="@drawable/choosingcircle" />

    <ImageView
        android:id="@+id/sub4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/sub3"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="54dp"
        app:srcCompat="@drawable/choosingcircle" />

    <TextView
        android:id="@+id/att_sub3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sub3"
        android:layout_alignLeft="@+id/sub3"
        android:layout_alignRight="@+id/sub3"
        android:layout_alignTop="@+id/sub3"
        android:gravity="center"
        android:text="@string/sub3"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/att_sub4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sub4"
        android:layout_alignLeft="@+id/sub4"
        android:layout_alignRight="@+id/sub4"
        android:layout_alignTop="@+id/sub4"
        android:gravity="center"
        android:text="@string/sub4"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />

</RelativeLayout>