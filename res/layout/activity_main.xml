<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.app.basicscience.csdept.MainActivity">

    <Button
        android:id="@+id/student_sign"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_above="@+id/faculty_sign"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:text="@string/entrypage_name1" />

    <Button
        android:id="@+id/faculty_sign"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/student_sign"
        android:layout_marginBottom="36dp"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:text="@string/entrypage_name2" />

</RelativeLayout>
